{% extends "base.html.twig" %}

{% block body %}
    {{ parent() }}

    {% for tweet in tweets %}
        <div class="pure-g">
            <div class="pure-u-1-3">  </div>
            <div class="pure-u-1-3"> <blockquote class="twitter-tweet">
                    <a href="https://twitter.com/{{ tweet.user.screen_name }}/status/{{ tweet.id_str }}"></a>
                </blockquote>
                <button class="revome_tweet button-error pure-button" route="{{ path('removeTweet', {'id': tweet.id_str}) }}">Supprimer</button>
            </div>
            <div class="pure-u-1-3">  </div>

        </div>
    {% endfor %}

    <script src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
{% endblock %}